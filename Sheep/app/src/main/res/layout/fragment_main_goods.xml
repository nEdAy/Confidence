<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

        <com.wuhenzhizao.titlebar.widget.CommonTitleBar
                android:id="@+id/titleBar_goods_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:centerType="textView"
                app:centerText="优惠快爆"
                app:fillStatusBar="true"
                app:statusBarColor="@color/colorPrimaryDark"
                app:statusBarMode="light"
                app:titleBarColor="@color/red"
                app:centerTextColor="@android:color/white"
                app:centerTextMarquee="true"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:orientation="horizontal">

            <com.flyco.roundview.RoundTextView
                    android:id="@+id/rtv_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="TextView Default"
                    android:textColor="#383838"
                    app:rv_backgroundColor="#ffffff"
                    app:rv_backgroundPressColor="#383838"
                    app:rv_strokeColor="#383838"
                    app:rv_strokeWidth="1dp"
                    app:rv_textPressColor="#ffffff"/>

            <com.flyco.roundview.RoundTextView
                    android:id="@+id/rtv_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:gravity="center"
                    android:paddingBottom="10dp"
                    android:paddingLeft="18dp"
                    android:paddingRight="18dp"
                    android:paddingTop="10dp"
                    android:text="Radius Half Height"
                    android:textColor="#03A9F4"
                    app:rv_backgroundColor="#ffffff"
                    app:rv_backgroundPressColor="#03A9F4"
                    app:rv_isRadiusHalfHeight="true"
                    app:rv_isRippleEnable="false"
                    app:rv_strokeColor="#03A9F4"
                    app:rv_strokePressColor="#6D8FB0"
                    app:rv_strokeWidth="1dp"
                    app:rv_textPressColor="#ffffff"/>
        </LinearLayout>


        <com.flyco.roundview.RoundTextView
                android:id="@+id/rtv_3"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:ellipsize="end"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:paddingLeft="18dp"
                android:paddingRight="18dp"
                android:paddingTop="10dp"
                android:singleLine="true"
                android:text="TextView Radius 10dpTextView Radius 10dp"
                android:textColor="#383838"
                app:rv_backgroundColor="#F6CE59"
                app:rv_cornerRadius="10dp"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">

            <com.flyco.roundview.RoundTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="2.5dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="Radius TopLeft"
                    android:textColor="#ffffff"
                    app:rv_backgroundColor="#DE88A5"
                    app:rv_cornerRadius_TL="10dp"/>

            <com.flyco.roundview.RoundTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2.5dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="Radius TopRight"
                    android:textColor="#ffffff"
                    app:rv_backgroundColor="#F08A5D"
                    app:rv_cornerRadius_TR="10dp"/>
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">

            <com.flyco.roundview.RoundTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="2.5dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="Radius BottomLeft"
                    android:textColor="#ffffff"
                    app:rv_backgroundColor="#4AA0D5"
                    app:rv_cornerRadius_BL="10dp"/>

            <com.flyco.roundview.RoundTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2.5dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="Radius BottomRight"
                    android:textColor="#ffffff"
                    app:rv_backgroundColor="#7A9EAF"
                    app:rv_cornerRadius_BR="10dp"/>
        </LinearLayout>

        <com.flyco.roundview.RoundFrameLayout
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:padding="10dp"
                app:rv_backgroundColor="#009688"
                app:rv_cornerRadius="5dp">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="FrameLayout"
                    android:textColor="#ffffff"/>
        </com.flyco.roundview.RoundFrameLayout>

        <com.flyco.roundview.RoundLinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingBottom="10dp"
                android:paddingLeft="18dp"
                android:paddingRight="18dp"
                android:paddingTop="10dp"
                android:textColor="#ffffff"
                app:rv_backgroundColor="#E45171"
                app:rv_cornerRadius="5dp">

            <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@mipmap/ic_launcher"
                    android:textColor="#ffffff"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="LinearLayout"
                    android:textColor="#ffffff"/>
        </com.flyco.roundview.RoundLinearLayout>

        <com.flyco.roundview.RoundRelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="18dp"
                android:paddingRight="18dp"
                android:paddingTop="10dp"
                android:textColor="#ffffff"
                app:rv_backgroundColor="#655989"
                app:rv_isRadiusHalfHeight="true">

            <ImageView
                    android:id="@+id/iv_portrait"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/ic_launcher"
                    android:textColor="#ffffff"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/iv_portrait"
                    android:text="RelativeLayout"
                    android:textColor="#ffffff"/>
        </com.flyco.roundview.RoundRelativeLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

            <com.flyco.roundview.RoundLinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:textColor="#ffffff"
                    app:rv_backgroundColor="#6D8FB0"
                    app:rv_cornerRadius="5dp"
                    app:rv_isWidthHeightEqual="true">

                <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@mipmap/ic_launcher"
                        android:textColor="#ffffff"/>
            </com.flyco.roundview.RoundLinearLayout>

            <com.flyco.roundview.RoundLinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="18dp"
                    android:textColor="#ffffff"
                    app:rv_backgroundColor="#393E46"
                    app:rv_isRadiusHalfHeight="true"
                    app:rv_isWidthHeightEqual="true">

                <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@mipmap/ic_launcher"
                        android:textColor="#ffffff"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="Circle"
                        android:textColor="#ffffff"/>
            </com.flyco.roundview.RoundLinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>