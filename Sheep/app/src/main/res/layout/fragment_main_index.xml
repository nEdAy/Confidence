            app:showBottomLine="false"
            app:centerSearchEditable="false"
            app:leftType="imageButton"
            app:leftImageResource="@drawable/ic_subject_white_24dp"
            app:rightImageResource="@drawable/ic_search_white_24dp"
            app:rightType="imageButton"/>

    <include layout="@layout/include_main_index_header"/>

    <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/divide_line_height"
            android:background="@color/lineColor"/>

